/* setting.wxss */

.setting{
  display: flex;
  flex-direction: column;  
}

.itemList{
  width: 100%;
  height:120rpx;
  position: relative;
  border-bottom-style: solid;
  border-bottom-color: lightgray;
  border-bottom-width: 2rpx;
}

.navig{
  width: 60rpx;
  height: 80rpx;
  position: absolute;
  right: 20rpx;
  top: 40rpx; 
}

.text{
  width: 200rpx;
  height: 80rpx;
  position: absolute;
  left: 10%;
  top: 40rpx;
}

.info{
  width: 200rpx;
  height: 80rpx;
  position: absolute;
  right: 50rpx;
  top: 40rpx;   
  text-align:right;
  padding:0px;
  vertical-align:middle ;
  margin:0px;    
}

.sound{
  width: 100%;
  height: 80rpx;
  position: relative;
  border-bottom-style: solid;
  border-bottom-color: lightgray;
  border-bottom-width: 2rpx;    
}

.soundSlider{
  width: 80%;
  position: absolute;
  left: 10%;
}

.down{
  width: 10%;
  height: 80rpx;
  position: absolute;
  left: 0rpx;
  text-align:center;
  padding:0px;
  vertical-align:middle ;
  margin:0px;     
}

.up{
  width: 10%;
  height: 80rpx;
  position: absolute;
  right: 0rpx;
  text-align:center;
  padding:0px;
  vertical-align:middle ;
  margin:0px;     
}

.soundImage{
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
  border-radius: 50%;
}