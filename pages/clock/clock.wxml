<!--clock.wxml-->

<view>
<form bindsubmit="setClock">
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;"  value="{{value}}" catchchange="bindChange">
    <picker-view-column>
      <view wx:for="{{hours}}" style="line-height: 50px">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{minutes}}" style="line-height: 50px">{{item}}</view>
    </picker-view-column>
  </picker-view>
  <button form-type="submit">添加</button>
</form>

<view wx:for="{{clocks}}">{{item.hour}}:{{item.minute}}
<switch checked bindchange="switchChange"/>
</view>

</view>
