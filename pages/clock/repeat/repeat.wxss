/* repeat.wxss */

.repeat{
  display: flex;
  flex-direction: column;  
}

.firstItem{
  width: 100%;
  height:120rpx;
  position: relative;
  top: 60rpx;
  border-top-style: solid;
  border-top-color: lightgray;
  border-top-width: 2rpx;  
  border-bottom-style: solid;
  border-bottom-color: lightgray;
  border-bottom-width: 2rpx;
}

.repeatText{
  width: 100rpx;
  height: 80rpx;
  position: relative;
  top: 30rpx;
  left: 50rpx;
  font-size: 50rpx;
}

.radioGroup{
  width:80rpx;
  height: 80rpx;
  position: absolute;
  right: 30rpx;
  top:30rpx;
}

.itemList{
  width: 100%;
  height:120rpx;
  top:60rpx;
  position: relative;
  border-bottom-style: solid;
  border-bottom-color: lightgray;
  border-bottom-width: 2rpx;
}