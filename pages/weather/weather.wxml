<!--weather.wxml-->

<view>
<button>当前城市： {{city}}</button>
<form bindsubmit="setCity">

  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;"  value="{{values}}" catchchange="bindChange">
    <picker-view-column>
      <view wx:for="{{cities}}" wx:key="id" style="line-height: 50px; text-align: center;">{{item.id}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{subcities}}"  style="line-height: 50px; text-align: center;">{{item}}</view>
    </picker-view-column>    
  </picker-view>
<button form-type="submit">修改</button>
</form>
</view>

