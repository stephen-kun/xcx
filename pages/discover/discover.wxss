/* discover.wxss */

.discover{
  display: flex;
  flex-direction: column;
}

.title{
  width: 100%;
  height: 100rpx;
  position: relative;
  border-bottom-style: solid;
  border-bottom-color: lightgray;
  border-bottom-width: 2rpx;
  background-color: gainsboro;  
}

.story{
  width: 33%;
  height: 100rpx;
  position: absolute;
  left: 0rpx;
  top:0rpx;
  font-size: 40rpx;
}

.broadcast{
  width: 34%;
  height: 100rpx;
  position: relative;
  top:0rpx;
  font-size: 40rpx;
}

.music{
  width: 33%;
  height: 100rpx;
  position: absolute;
  top:0rpx;
  right: 0rpx;
  font-size: 40rpx;
}